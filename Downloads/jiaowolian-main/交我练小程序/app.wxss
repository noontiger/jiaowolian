/**app.wxss**/

/* 夜间模式样式 */
.page.dark-mode {
  background-color: #121212;
  color: #e0e0e0;
}

.section.dark-mode {
  background: #1e1e1e;
  color: #e0e0e0;
}

.card.dark-mode {
  background: #1e1e1e;
  color: #e0e0e0;
}

.primary-btn.dark-mode {
  background-color: #1976d2;
}

.secondary-btn.dark-mode {
  background-color: #333;
  color: #e0e0e0;
}

.search-input.dark-mode {
  background: #333;
  color: #e0e0e0;
}

.list-item.dark-mode {
  border-bottom-color: #333;
}

.list-item-title.dark-mode {
  color: #e0e0e0;
}

.list-item-desc.dark-mode {
  color: #aaa;
}

.progress-bar.dark-mode {
  background: #333;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

/* 通用样式 */
.page {
  background-color: #f8f8f8;
  font-size: 16px;
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
  min-height: 100vh;
}

.section {
  margin: 30rpx;
  background: #fff;
  border-radius: 10rpx;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

.section-title {
  font-size: 18px;
  color: #333;
  font-weight: 500;
  padding: 20rpx 30rpx;
  border-bottom: 1px solid #eee;
}

.card {
  margin: 20rpx;
  padding: 20rpx;
  background: #fff;
  border-radius: 10rpx;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
}

.flex-row {
  display: flex;
  flex-direction: row;
}

.flex-column {
  display: flex;
  flex-direction: column;
}

.flex-center {
  justify-content: center;
  align-items: center;
}

.flex-between {
  justify-content: space-between;
}

.primary-btn {
  background-color: #1296db;
  color: white;
  border-radius: 10rpx;
  padding: 20rpx 40rpx;
  font-size: 16px;
  text-align: center;
}

.secondary-btn {
  background-color: #f0f0f0;
  color: #333;
  border-radius: 10rpx;
  padding: 20rpx 40rpx;
  font-size: 16px;
  text-align: center;
}

/* 功能卡片样式 */
.feature-grid {
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx;
}

.feature-item {
  width: 33.33%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 0;
}

.feature-icon {
  width: 100rpx;
  height: 100rpx;
  background: #e6f7ff;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 10rpx;
}

.feature-text {
  font-size: 14px;
  color: #666;
}

/* 搜索框样式 */
.search-box {
  padding: 20rpx 30rpx;
  background: #fff;
  display: flex;
  align-items: center;
}

.search-input {
  flex: 1;
  height: 70rpx;
  background: #f5f5f5;
  border-radius: 35rpx;
  padding: 0 30rpx;
  font-size: 14px;
}

/* 标签样式 */
.tag {
  display: inline-block;
  padding: 4rpx 16rpx;
  background: #e6f7ff;
  color: #1296db;
  border-radius: 6rpx;
  font-size: 12px;
  margin-right: 10rpx;
}

/* 列表样式 */
.list-item {
  padding: 20rpx 30rpx;
  border-bottom: 1px solid #eee;
  display: flex;
  align-items: center;
}

.list-item-content {
  flex: 1;
}

.list-item-title {
  font-size: 16px;
  color: #333;
  margin-bottom: 10rpx;
}

.list-item-desc {
  font-size: 14px;
  color: #999;
}

/* 进度条样式 */
.progress-bar {
  height: 10rpx;
  background: #eee;
  border-radius: 5rpx;
  overflow: hidden;
  margin: 10rpx 0;
}

.progress-inner {
  height: 100%;
  background: #1296db;
  border-radius: 5rpx;
}