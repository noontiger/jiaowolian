/* wrong-questions.wxss */

/* 容器样式 */
.container {
  padding: 30rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 页面标题 */
.page-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.clear-btn {
  padding: 6rpx 20rpx;
  background-color: #f0f0f0;
  border-radius: 30rpx;
  font-size: 24rpx;
  color: #666;
}

/* 加载中样式 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 400rpx;
}

.loading-icon {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #1296db;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 400rpx;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  color: #ddd;
}

.empty-text {
  font-size: 32rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #bbb;
}

/* 错题列表 */
.question-list {
  margin-top: 20rpx;
}

.list-item {
  background-color: #fff;
  border-radius: 10rpx;
  margin-bottom: 30rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.item-tags {
  display: flex;
  flex-wrap: wrap;
}

.tag {
  display: inline-block;
  padding: 4rpx 16rpx;
  background: #e6f7ff;
  color: #1296db;
  border-radius: 6rpx;
  font-size: 24rpx;
  margin-right: 10rpx;
}

.item-date {
  font-size: 24rpx;
  color: #999;
}

.item-content {
  padding: 30rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.item-title {
  font-size: 30rpx;
  color: #333;
  line-height: 1.5;
  margin-bottom: 20rpx;
  display: block;
}

/* 选择题选项 */
.item-options {
  margin-top: 20rpx;
}

.option-row {
  display: flex;
  align-items: flex-start;
  margin-bottom: 16rpx;
  padding: 10rpx;
  border-radius: 6rpx;
}

.option-row.user-selected {
  background-color: #fff1f0;
}

.option-row.correct {
  background-color: #f6ffed;
}

.option-letter {
  width: 40rpx;
  height: 40rpx;
  background-color: #f5f5f5;
  color: #666;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  margin-right: 16rpx;
}

.option-text {
  flex: 1;
  font-size: 26rpx;
  line-height: 1.5;
  padding-top: 4rpx;
}

/* 填空题/解答题 */
.item-answer {
  margin-top: 20rpx;
  background-color: #f9f9f9;
  padding: 20rpx;
  border-radius: 8rpx;
}

.answer-row {
  margin-bottom: 16rpx;
}

.answer-row:last-child {
  margin-bottom: 0;
}

.answer-label {
  font-size: 26rpx;
  color: #666;
  margin-right: 10rpx;
}

.answer-content {
  font-size: 26rpx;
  line-height: 1.5;
}

.user-answer {
  color: #f5222d;
}

.correct-answer {
  color: #52c41a;
}

/* 操作按钮 */
.item-actions {
  display: flex;
  justify-content: flex-end;
  padding: 16rpx 30rpx;
}

.action-btn {
  padding: 6rpx 20rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
}

.action-btn.delete {
  background-color: #fff1f0;
  color: #f5222d;
}