/* user.wxss */

/* 容器样式 */
.container {
  padding: 2px;
  margin: 0 auto;
  background-color: #f5f5f5;
  min-height: 100vh;
  width: 100%;
  box-sizing: border-box;
}

/* 用户信息区域 */
.user-info-section {
  background: linear-gradient(135deg, #1a73e8, #0d47a1);
  padding: 100rpx 0 80rpx;
  color: #fff;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.2);
  position: relative;
  width: 100%;
  margin-bottom: 40rpx;
  border-radius: 0 0 40rpx 40rpx;
}

.user-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  z-index: 1;
}

.user-avatar {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  border: 6rpx solid rgba(255, 255, 255, 0.8);
  margin-bottom: 30rpx;
  box-shadow: 0 10rpx 20rpx rgba(0, 0, 0, 0.2);
}

.user-avatar-placeholder {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.3);
  margin-bottom: 20rpx;
}

.user-name {
  font-size: 42rpx;
  font-weight: 500;
  margin-bottom: 10rpx;
}

.login-btn {
  margin-top: 30rpx;
  background-color: transparent;
  border: 2rpx solid #fff;
  color: #fff;
  font-size: 32rpx;
  padding: 12rpx 60rpx;
  border-radius: 40rpx;
  font-weight: 500;
}

/* 学习统计区域 */
.statistics-section {
  background-color: #fff;
  margin: -60rpx 20rpx 40rpx;
  padding: 40rpx;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
  position: relative;
  z-index: 1;
  width: calc(100% - 40rpx);
  transition: all 0.3s ease;
}

.statistics-section:active {
  transform: scale(0.98);
}

.statistics-grid {
  display: flex;
  justify-content: space-between;
}

.statistics-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 25%;
  padding: 10rpx;
}

.statistics-value {
  font-size: 42rpx;
  font-weight: bold;
  color: #1a73e8;
  margin-bottom: 10rpx;
  transition: all 0.3s ease;
}

.statistics-item:active .statistics-value {
  transform: scale(1.1);
}

.statistics-label {
  font-size: 26rpx;
  color: #666;
  font-weight: 500;
}

/* 功能列表区域 */
.function-section {
  background-color: #fff;
  margin: 0 20rpx 40rpx;
  padding: 40rpx 30rpx;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
  width: calc(100% - 40rpx);
  box-sizing: border-box;
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
}

.function-list {
  background-color: #fff;
}

.function-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
  margin: 0 20rpx;
  width: calc(100% - 40rpx);
  transition: all 0.2s ease;
}

.function-item:active {
  background-color: #f8f8f8;
}

.function-item:last-child {
  border-bottom: none;
}

.function-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
  width: 60rpx;
  text-align: center;
  color: #1a73e8;
}

.function-name {
  flex: 1;
  font-size: 30rpx;
  color: #333;
}

.function-arrow {
  color: #ccc;
  font-size: 30rpx;
}

/* 数据清除按钮 */
.clear-data-section {
  margin: 40rpx 5%;
  padding: 0;
}

.clear-data-btn {
  background-color: #fff;
  color: #ff6b6b;
  font-size: 30rpx;
  border-radius: 10rpx;
}

/* 版本信息 */
.version-info {
  text-align: center;
  font-size: 24rpx;
  color: #999;
  margin: 40rpx 0;
}