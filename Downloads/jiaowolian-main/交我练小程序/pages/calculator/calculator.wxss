.calculator-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #1a1a1a;
}

.display {
  flex: 1;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  padding: 20px;
  background-color: #252525;
  color: #f0f0f0;
  font-size: 48px;
  font-family: 'SF Mono', monospace;
  border-bottom: 1px solid rgba(255,255,255,0.1);
}

.history-container {
  flex: 0 0 auto;
  padding: 8px 0;
  margin: 0;
  background-color: #2d2d2d;
  overflow-y: auto;
  max-height: 150px;
  border-radius: 12px;
  box-shadow: 0 4px 20px rgba(0,0,0,0.2);
  margin: 0 16px;
}

.history-title {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  color: #ffffff;
}

.history-item {
  padding: 8px 16px;
  height: 40px;
  border-bottom: 1px solid rgba(0,0,0,0.08);
  font-size: 16px;
  color: #ffffff;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  transition: background-color 0.2s ease;
}

.history-item:active {
  background-color: rgba(0,0,0,0.05);
}

.buttons {
  flex: 3;
  display: flex;
  flex-direction: column;
  padding: 10px;
}

.row {
  flex: 1;
  display: flex;
  margin-bottom: 6px;
}

.btn {
  flex: 1;
  margin-right: 50px;
  border-radius: 16px;
  font-size: 32px;
  display: flex;
  justify-content: center;
  align-items: center;
  border: auto;
  padding: 8px 0;
  transition: all 0.2s ease;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
  font-weight: 500;
}

.btn:active {
  transform: translateY(2px) scale(0.98);
  box-shadow: 0 1px 1px rgba(0, 0, 0, 0.2);
  transition: all 0.1s cubic-bezier(0.4, 0, 0.2, 1);
}

.number {
  background-color: #3a3a3a;
  color: #f0f0f0;
}

.function {
  background-color: #4a4a4a;
  color: #f0f0f0;
}

.operator {
  background-color: #007AFF;
  color: white;
}

.equals {
  background-color: #007AFF;
  color: white;
}

.zero {
  flex: 2;
}